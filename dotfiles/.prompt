#!/usr/bin/env bash

# define prompt colors
reset="\e[0m"
black="\e[30m"
blue="\e[34m"
cyan="\e[36m"
green="\e[32m"
orange="\e[33m"
purple="\e[35m"
red="\e[31m"
violet="\e[35m"
lightgray="\e[37m"
yellow="\e[33m"

# define prompt parts
directory='W'
chevron='❯'

# the prompt
PS1="\[${lightgray}\]\W ";
PS1+="\[${red}\]❯";
PS1+="\[${yellow}\]❯";
PS1+="\[${green}\]❯\[${reset}\] "; # end prompt (and reset color)
export PS1
